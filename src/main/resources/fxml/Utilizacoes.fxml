<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="520.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UtilizacoesController">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<top>
				<VBox alignment="CENTER" spacing="6.0" BorderPane.alignment="CENTER">
					<children>
						<Label text="Gerenciar Utilizacoes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
					</children>
					<padding>
						<Insets bottom="10.0" left="0.0" right="0.0" top="16.0" />
					</padding>
				</VBox>
			</top>
			<center>
				<VBox spacing="10.0" BorderPane.alignment="CENTER">
					<children>
						<HBox spacing="10.0" alignment="CENTER_LEFT">
							<children>
								<Label text="Veiculo:" prefWidth="80.0" />
								<ComboBox fx:id="comboVeiculo" prefWidth="200.0" />
								<Label text="Motorista:" prefWidth="80.0" />
								<ComboBox fx:id="comboMotorista" prefWidth="200.0" />
							</children>
						</HBox>
						<HBox spacing="10.0" alignment="CENTER">
							<children>
								<Button text="Registrar Retirada" onAction="#registrarRetirada" prefWidth="150.0" />
								<Button text="Registrar Devolucao" onAction="#registrarDevolucao" prefWidth="150.0" />
								<Button text="Excluir Utilizacao" onAction="#excluir" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
								<Button text="Atualizar Lista" onAction="#atualizarLista" prefWidth="150.0" />
							</children>
						</HBox>
						<TableView fx:id="tabelaUtilizacoes" VBox.vgrow="ALWAYS">
							<columns>
								<TableColumn fx:id="colCodigo" text="Codigo" prefWidth="80.0" />
								<TableColumn fx:id="colVeiculo" text="Veiculo" prefWidth="120.0" />
								<TableColumn fx:id="colMotorista" text="Motorista" prefWidth="180.0" />
								<TableColumn fx:id="colDataRetirada" text="Retirada" prefWidth="140.0" />
								<TableColumn fx:id="colDataDevolucao" text="Devolucao" prefWidth="140.0" />
								<TableColumn fx:id="colStatus" text="Status" prefWidth="139.0" />
							</columns>
						</TableView>
					</children>
					<padding>
						<Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
					</padding>
				</VBox>
			</center>
			<bottom>
				<HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
					<children>
						<Button text="Voltar ao Menu" onAction="#voltarMenu" />
					</children>
					<padding>
						<Insets bottom="16.0" left="0.0" right="0.0" top="10.0" />
					</padding>
				</HBox>
			</bottom>
		</BorderPane>
	</children>
</AnchorPane>
