<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="520.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<top>
				<VBox alignment="CENTER" spacing="6.0" BorderPane.alignment="CENTER">
					<children>
						<Label text="Sistema de Gerenciamento de Frota" />
						<Label text="UENP - Campus Bandeirantes" />
					</children>
					<padding>
						<Insets bottom="20.0" left="0.0" right="0.0" top="24.0" />
					</padding>
				</VBox>
			</top>
			<center>
				<VBox alignment="CENTER" spacing="14.0" BorderPane.alignment="CENTER">
					<children>
						<Label text="Menu Principal" />
						<Button mnemonicParsing="false" onAction="#abrirUsuarios" prefWidth="240.0" text="Gerenciar Usuarios" />
						<Button mnemonicParsing="false" onAction="#abrirMotoristas" prefWidth="240.0" text="Gerenciar Motoristas" />
						<Button mnemonicParsing="false" onAction="#abrirVeiculos" prefWidth="240.0" text="Gerenciar Veiculos" />
						<Button mnemonicParsing="false" onAction="#abrirUtilizacoes" prefWidth="240.0" text="Gerenciar Utilizacoes" />
						<Button mnemonicParsing="false" onAction="#abrirRelatorios" prefWidth="240.0" text="Relatorios" />
					</children>
				</VBox>
			</center>
			<bottom>
				<HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
					<children>
						<Label text="Operador: nao autenticado" fx:id="statusOperador" />
						<Button mnemonicParsing="false" onAction="#sair" text="Sair" />
					</children>
					<padding>
						<Insets bottom="16.0" left="0.0" right="0.0" top="16.0" />
					</padding>
				</HBox>
			</bottom>
		</BorderPane>
	</children>
</AnchorPane>
